<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function() {
	$("div#nome_real_div").hide();
	$("#butaum").click(function() {
		if($("#butaum").val()=="Cancelar"){
			$("div#nome_real_div").hide();
			$("#butaum").val("Editar Nome");
		}else{
			$("div#nome_real_div").show();
			$("#butaum").val("Cancelar Edição");
		}	
	});
});
</script>

<h2><%= @prof.nome_real %> <input type="button" value="Editar Nome" id="butaum" /> </h2>

<div id="nome_real_div"> 
	<%= form_for @prof do |f| %>
	  <%= f.label :nome_real %>:
	  <%= f.text_field :nome_real %>
	  <%= f.submit "Atualizar Nome" %>
	<% end %>
</div>

<p><%= @header %></p>
<% @prof.conteudos.each do |conteudo| %>

  <p class="conteudo">
    <%= raw conteudo.texto %>
  	<a href="delete/conteudo/<%= conteudo.id %>" class="excluir"> Excluir post </a>
  </p>
<% end %>
            
<h3>Insira um novo conteúdo:</h3>
<%= form_for([@prof, @prof.conteudos.build]) do |f| %>
  <div class="field">
      <%= f.text_area :texto, :class => 'tinymce' %>
  </div>
  <div class="actions">
      <%= f.submit "Enviar Conteúdo" %>
  </div>
<% end %>
